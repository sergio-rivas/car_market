<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.2) 50%); background-size: cover;">
  <div class="banner-content" style="margin-top: -80px">

    <h2 class="hp-carrie-slogan">
      <span> The <strong>BETTER</strong> way to buy a car </span>
    </h2>



    <div class="row">
      <div class="col-xs-4 col-xs-offset-4 ">
        <form action="<%= cars_path  %>" class="navbar-wagon-search" method="get">
          <input type="text" class="navbar-wagon-search-input" name="search_value" placeholder="Search for brand (e.g., Audi)">
          <button type="submit" class="navbar-wagon-search-btn">
            <i class="fa fa-search"></i>
          </button>
        </form>
      </div>
    </div>



    <div class="row">
      <div class="col-xs-4 col-xs-offset-4 ">
        <%= link_to "APPLY FILTER", cars_path, class: "btn btn-primary btn-lg" %>
      </div>
    </div>

  </div>
</div>
