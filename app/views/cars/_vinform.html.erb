<%= simple_form_for @car, url: vin_cars_path do |f| %>
  <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :vin, label: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary", value: "Next", class: "submit-button btn-primary" %>
    </div>
<% end %>
