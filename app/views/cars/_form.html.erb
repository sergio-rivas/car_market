<%= simple_form_for @car do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.simple_fields_for :models do |p| %>
       <%= p.input :brand_id, collection: Brand.all.map{|b| b.brand_name} %>
    <% end %>
    <%= f.input :model_id, collection: Model.all %>
    <%= f.input :price, placeholder: "Add price in EUR" %>
    <%= f.input :color %>
    <%= f.input :odometer, placeholder: "Add the current km status" %>
    <%= f.input :year %>
    <%= f.input :month %>
    <%= f.input :transmission, collection: ["Automatic", "Manual"] %>
    <%= f.input :fuel_type, collection: ["Gasoline", "Diesel", "Electric"] %>
    <%= f.input :engine_power_cc, placeholder: "Add cc3 of the engine" %>
    <%= f.input :engine_power_hp, placeholder: "Add horsepower" %>
    <%= f.input :description, placeholder: "Is there any additional important information about the car?" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
