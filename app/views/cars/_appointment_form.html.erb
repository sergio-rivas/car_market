  <div class="appointment" style="padding: 15px;">
  <% array = (10..20).to_a %>
  <% array.each_with_index {|a, i| array[i] = a.to_s + ":00"}  %>
  <%= simple_form_for [@car, @appointment], html: {class: 'form-validate'} do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :appointment_date, as: :string, required: true, placeholder: "#{Time.now.day}/#{Time.now.month}/#{Time.now.year}",  input_html: { 'data-behaviour' => 'datepicker', class: 'validate[required]'}  %>
      <%= f.input :appointment_time,  as: :select, collection: array , required: true, input_html: { class: 'validate[required]'}%>
      <%=  f.hint 'Set a day and time!'%>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>

  <% end %>

</div>

<input type="hidden" name="startTime" value="10:00">

