<%= simple_form_for cars_path, method: :get do |f| %>
  <%= f.error_notification %>
  <%= f.input :brand, input_html: { name: 'car[brand]', value: params[:search_value] }, required: false %>
  <%= f.input :price, input_html: { name: 'car[price]' }, required: false, placeholder: 'Add maxixmum limit in EUR' %>
  <%= f.input :odometer, input_html: { name: 'car[odometer]' }, required: false, placeholder: "Add maximum limit in km"  %>
  <%= f.input :year, input_html: { name: 'car[year]' }, required: false, placeholder: "Add minimum limit in year"  %>
  <%= f.input :trans_type, label: "Transmission type", input_html: { name: 'car[trans_type]' }, collection: @collections[:trans_type], required: false  %>
  <%= f.input :trans_speeds, label: "Transmission speed", input_html: { name: 'car[trans_speeds]' }, collection: @collections[:trans_speeds], required: false  %>
  <%= f.input :size, input_html: { name: 'car[size]' }, collection: @collections[:size], required: false  %>
  <%= f.input :style, input_html: { name: 'car[style]' }, collection: @collections[:style], required: false  %>
  <%= f.input :doors, input_html: { name: 'car[doors]' }, collection: @collections[:doors], required: false  %>
  <%= f.input :drive, input_html: { name: 'car[drive]' }, collection: @collections[:drive], required: false  %>

  <%= f.button :submit, "Apply filter", class: "btn btn-primary" %>
<% end %>
